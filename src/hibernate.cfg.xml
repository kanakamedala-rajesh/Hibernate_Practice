<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
  "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
  "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
	<session-factory>
		<property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
		<property name="hibernate.connection.url">jdbc:postgresql://localhost/MyDB</property>
		<property name="hibernate.connection.username">postgres</property>
		<property name="hibernate.connection.password">root</property>
		<property name="hibernate.dialect">org.hibernate.dialect.PostgreSQLDialect</property>
		<property name="show_sql">true</property>
		<property name="hibernate.hbm2ddl.table">update</property>
		<mapping class="com.training.ContactPojo" />
		<mapping class="com.training.WriterPOJO" />
		<mapping class="com.training.StoryPOJO" />
		<mapping class="com.training.EventPOJO"/>
		<mapping class="com.training.SpeakerPOJO"/>
		<mapping class="com.training.PublisherPOJO"/>
		<mapping class="com.training.BookPOJO"/>
	</session-factory>
</hibernate-configuration>